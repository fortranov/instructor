# Triplan Production Environment Variables

# =============================================================================
# БЕЗОПАСНОСТЬ
# =============================================================================

# Секретный ключ для JWT токенов (ОБЯЗАТЕЛЬНО ИЗМЕНИТЬ В ПРОДАКШЕНЕ!)
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars

# Токен для защиты endpoints миграций (ОБЯЗАТЕЛЬНО ИЗМЕНИТЬ!)
ADMIN_MIGRATION_TOKEN=your-admin-migration-token-change-this

# =============================================================================
# БАЗА ДАННЫХ
# =============================================================================

# Путь к файлу базы данных
DB_PATH=/app/data/triplan.db

# =============================================================================
# НАСТРОЙКИ МИГРАЦИЙ
# =============================================================================

# Только валидация, без выполнения миграций
VALIDATE_ONLY=false

# Пропустить создание резервной копии
SKIP_BACKUP=false

# Принудительно выполнить миграции даже при неудачной валидации
FORCE_MIGRATION=false

# =============================================================================
# NGINX / SSL
# =============================================================================

# Домен для SSL сертификатов
DOMAIN=localhost

# Email для Let's Encrypt (если используется)
LETSENCRYPT_EMAIL=admin@yourdomain.com

# =============================================================================
# МОНИТОРИНГ И ЛОГИРОВАНИЕ
# =============================================================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Включить подробные логи
VERBOSE_LOGGING=false

# =============================================================================
# ПРОИЗВОДИТЕЛЬНОСТЬ
# =============================================================================

# Количество worker процессов для backend
WORKERS=4

# Максимальный размер загружаемых файлов (в байтах)
MAX_UPLOAD_SIZE=10485760

# Таймаут для HTTP запросов (в секундах)
HTTP_TIMEOUT=60

# =============================================================================
# РЕЗЕРВНОЕ КОПИРОВАНИЕ
# =============================================================================

# Директория для резервных копий
BACKUP_DIR=/app/backups

# Количество дней для хранения бэкапов
BACKUP_RETENTION_DAYS=30

# Включить автоматические бэкапы
AUTO_BACKUP=true

# Расписание автоматических бэкапов (cron format)
BACKUP_SCHEDULE="0 2 * * *"

# =============================================================================
# РАЗРАБОТКА (НЕ ИСПОЛЬЗОВАТЬ В ПРОДАКШЕНЕ)
# =============================================================================

# Режим разработки
DEBUG=false

# Автоматическая перезагрузка при изменении кода
AUTO_RELOAD=false

# CORS настройки для разработки
CORS_ORIGINS="*"

# =============================================================================
# ИНТЕГРАЦИИ
# =============================================================================

# URL для отправки уведомлений (опционально)
NOTIFICATION_WEBHOOK_URL=

# API ключ для внешних сервисов
EXTERNAL_API_KEY=

# =============================================================================
# РАСШИРЕННЫЕ НАСТРОЙКИ
# =============================================================================

# Размер пула соединений к базе данных
DB_POOL_SIZE=10

# Максимальное количество соединений
DB_MAX_OVERFLOW=20

# Таймаут соединения к базе данных
DB_CONNECT_TIMEOUT=30

# Включить SQL логирование
SQL_LOGGING=false

# =============================================================================
# ПРИМЕРЫ ИСПОЛЬЗОВАНИЯ
# =============================================================================

# Для локальной разработки:
# DEBUG=true
# AUTO_RELOAD=true
# CORS_ORIGINS="http://localhost:3000"

# Для staging:
# DEBUG=false
# LOG_LEVEL=INFO
# VALIDATE_ONLY=false

# Для продакшена:
# DEBUG=false
# LOG_LEVEL=WARNING
# AUTO_BACKUP=true
# WORKERS=4
